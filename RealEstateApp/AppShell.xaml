<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RealEstateApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RealEstateApp"
    Title="RealEstateApp">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />

        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:ViewAllListings}"
        Route="Settings" />
        
        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:ListingDetails}"
        Route="Settings" />
    </TabBar>


</Shell>
