<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.ListingDetails"
             Title="Listing Details">

    <StackLayout Margin="10" Spacing="10">


        <Button x:Name="ListingDetailsBackToAll" Text="Back to Lisings page"/>


        <!-- this shows the listings -->
        <StackLayout Orientation="Horizontal"
                      Spacing="15"
                      BackgroundColor="AliceBlue"
                      Padding="10">
            <BoxView Color="Red"
                      WidthRequest="40" />
            <Label Text="This is address for the property"
                    FontSize="18"
                    VerticalOptions="Center" />
        </StackLayout>

        <StackLayout Orientation="Horizontal"
                      Spacing="15"
                      BackgroundColor="AliceBlue"
                      Padding="10">

            <Label Text="This is details for the property"
                    FontSize="18"
                    VerticalOptions="Center" />
        </StackLayout>

        <StackLayout Orientation="Horizontal"
                      Spacing="15"
                      BackgroundColor="AliceBlue"
                      Padding="10">

            <Label Text="Table for school stuff"
                    FontSize="18"
                    VerticalOptions="Center" />
        </StackLayout>


    </StackLayout>


</ContentPage>