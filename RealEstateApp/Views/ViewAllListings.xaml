<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.ViewAllListings"
             Title="View All Listings">

    <StackLayout Margin="10" Spacing="10">
        

            <!-- This is for filters  -->
            <StackLayout Orientation="Horizontal"
                         Spacing="15"
                         BackgroundColor="AliceBlue"
                         Padding="10">

                <Entry Placeholder="Postcode"/>
                <Entry Placeholder="State"/>

        </StackLayout>
            <Button x:Name="ViewAllListingsSearch" Text="Search!" BackgroundColor="Red" HorizontalOptions="Fill" Clicked="ViewAllListingsSearch_Clicked"/>


            <!-- this shows the listings -->

        <ListView x:Name="ListViewAllListings" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" BackgroundColor="AliceBlue" >
                            <Label Text="{Binding Address.DisplayAddress}"/>
                            <StackLayout Orientation="Horizontal"  Spacing="20">
                                <Image HeightRequest="50" Source="dotnet_bot.png"/>
                                <Label Text="{Binding Bathrooms}" VerticalOptions="Center"/>
                                <Label Text="{Binding Bedrooms}" VerticalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>



</ContentPage>